<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:showIn="@layout/settingsActivity"
  >
    <TextView
     android:text="Number of Questions"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="40px"
     android:textAlignment="center"
     android:id="@+id/QuestionCountView"/>

    <EditText
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/QuestionCountView"
     android:hint="Insert number here..."
     android:id="@+id/QuestionCountText"/>

    <TextView
     android:text="Passing Grade"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="40px"
     android:layout_below="@+id/QuestionCountView"
     android:id="@+id/PassGradeView"/>

    <EditText
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/PassGradeView"
     android:hint="Insert percentage here..."
     android:id="@+id/PassGradeText"/>

    <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:layout_alignParentBottom="true"
     android:id="@+id/SaveBtn"/>
    

</RelativeLayout>
