@page
@model MyBudgetPal.Pages.RegistrationModel
@{
}

<div class="container-fluid text-center">
    <img src="~/logo.png" />
</div>

<div class="container-fluid position-relative text-center">

    <div class="card">
        <div class="container-fluid text-center">

            <div class="row">
                <div class="form-group col-md-12 mx-auto">
                    <h1 class="display-4">Start managing your expenses like a pro today.</h1>
                </div>
            </div>

            <form class="needs-validation" novalidate>

                <div class="form-row">
                    <div class="form-group col-md-3 mx-auto">
                        <label for="validationCustom01" class="font-weight-bold">First name</label>
                        <input type="text" class="form-control" id="validationCustom01" placeholder="John" required>
                    </div>

                    <div class="form-group col-md-3 mx-auto">
                        <label for="validationCustom02" class="font-weight-bold">Last Name</label>
                        <input type="text" class="form-control" id="validationCustom02" placeholder="Doe" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-3 mx-auto">
                        <label for="validationCustom03" class="font-weight-bold">Username</label>
                        <input type="text" class="form-control" id="validationCustom03" placeholder="JohnDoe123" required>
                    </div>

                    <div class="form-group col-md-3 mx-auto">
                        <label for="validationCustom04" class="font-weight-bold">E-mail</label>
                        <input type="email" class="form-control" id="validationCustom04" placeholder="johndoe@email.com" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-3 mx-auto">
                        <label for="validationCustom05" class="font-weight-bold">Password</label>
                        <input type="password" class="form-control" id="validationCustom05" placeholder="********" required>
                    </div>

                    <div class="form-group col-md-3 mx-auto">
                        <label for="validationCustom06" class="font-weight-bold">Confirm password</label>
                        <input type="password" class="form-control" id="validationCustom06" placeholder="********" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2 mx-auto text-center">
                        <button id="btnCreate" class="btn btn-primary" type="submit">Create Account</button>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2 mx-auto text-center">
                        <a id="btnLogin" href="/Index" class="small">Login instead</a>
                    </div>
                </div>

            </form>


        </div>
    </div>
</div>

<div class="container-fluid" id="successContainer" hidden="hidden">
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <label id="successMsg" class="font-weight-bold" style="color: darkgreen;">Account successfully created!</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <label id="successMsg" style="margin: 0;">You will automatically be redirected to the next page in 3 seconds.</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <a href="/Index" class="small">Click here if you are not automatically redirected.</a>
        </div>
    </div>
</div>



<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {
                        event.preventDefault();
                        event.stopPropagation();
                        document.getElementById('successContainer').removeAttribute('hidden');
                        document.getElementById('btnCreate').setAttribute('disabled', 'true');
                        document.getElementById('btnCreate').style.cursor = 'not-allowed';
                        document.getElementById('btnLogin').setAttribute('hidden', 'hidden');
                        setTimeout(function () {
                            window.location.href = "/Index";
                        }, 3000);
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

</script>